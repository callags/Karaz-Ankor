<%= render :template => 'q1s1/index' %>

<% segment_sub_1a = 0 %>

<div id="1a">
	<% if @user_input_sub1 == "1a1" %>
		<body onload="ScrollDown()">
			<center>
				<h2>
					<div id="fade">
						<% if session[:bullet_hit].between?(1, 10) %>
							<% if session[:bullet_success].between?(1, 7) %>
								<%= "Despite emptying his clip, not a single bullet was able to pierce the support cable." %>
								<br><br>
								<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame, killing him instantly." %>
								<br><br>
								<%= "You have failed!" %>
								<br><br>
								<%= render 'q1/restart' %>
								<br>
								<%= render 'homepage/banner' %>
							<% elsif session[:bullet_success].between?(8,9) %>
								<% if $recoil_success.between?(1,3) %>
									<% @articles.each do |article| %>
										<% if article.title == "quest1 zip pistol recoil succeed" %> 
											<p>
												<%= article.text %>
											</p>
										<% end %>
									<% end %>
									<br>
									<%= "You have failed!" %>
									<br><br>
									<%= render 'q1/restart' %>
									<br>
									<%= render 'homepage/banner' %>
								<% else %>
									<%= "Despite emptying his clip, not a single bullet was able to pierce the support cable." %>
									<br><br>
									<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame, killing him instantly." %>
									<br><br>
									<%= "You have failed!" %>
									<br><br>
									<%= render 'q1/restart' %>
									<br>
									<%= render 'homepage/banner' %>
								<% end %>
							<% else %>
								<% @articles.each do |article| %>
									<% if article.title == "quest1 zip pistol succeed" %> 
										<p>
											<%= article.text %>
										</p>
									<% end %>
								<% end %>
								<br>
								<% segment_sub_1a = 1 %>	
							<% end %>	
						<% else %>
							<%= "Despite emptying his clip, not a single bullet was able to pierce the support cable." %>
							<br><br>
							<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame, killing him instantly." %>
							<br><br>
							<%= "You have failed!" %>
							<br><br>
							<%= render 'q1/restart' %>
							<br>
							<%= render 'homepage/banner' %>
						<% end %>
					</div>
				</h2>
			</center>
		</body>
	<% elsif @user_input_sub1 == "1a2" %>
		<body onload="ScrollDown()">
			<center>
				<h2>
					<div id="fade">
						<% if session[:axe_hit].between?(1, 75) %>
							<% if session[:axe_recoil].between?(1, 85) %>
								<% @articles.each do |article| %>
									<% if article.title == "quest1 axe hit succeed" %> 
										<p>
											<%= article.text %>
										</p>
									<% end %>
								<% end %>
								<br>
								<% segment_sub_1a = 1 %>
							<% else %>
								<% @articles.each do |article| %>
									<% if article.title == "quest1 axe recoil succeed" %> 
										<p>
											<%= article.text %>
										</p>
									<% end %>
								<% end %>
								<br>
								<%= "You have failed!" %>
								<br><br>
								<%= render 'q1/restart' %>
							<% end %>
						<% else%>
							<%= "Despite throwing each axe, not a single one was able to drop the chandelier." %>
							<br><br>
							<%= "Klarkel slams into the metallic frame, killing him instantly." %>
							<br><br>
							<%= "You have failed!" %>
							<br><br>
							<%= render 'q1/restart' %>
						<% end %>
					</div>
				</h2>
			</center>
		</body>
	<% end %>
</div>
	
