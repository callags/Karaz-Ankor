<% @url = request.original_fullpath %>

<% if not @url.include?('q1s1b') %>
	<%= render 'q1/menu' %>
<% end %>

<%= render :template => 'q1s1/index' %>

<% segment_sub_1a = 0 %>

<div id="1a">
	<% if @user_input_sub1 == "1a1" %>
		<body onload="ScrollDown()">
			<center>
				<h2>
					<% if $bullet_hit.between?(1,10) %>
						<% if $bullet_success.between?(1,7) %>
							<%= "Despite emptying his clip, not a single bullet was able to destroy the support cable." %>
							<br><br>
							<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame killing him instantly." %>
							<br><br>
							<%= "You have failed!" %>
							<br>
							<%= button_to 'restart', pathfinder_q1_index_path %>
						<% elsif $bullet_success.between?(8,9) %>
							<% if $recoil_success.between?(1,3) %>
								<% @articles.each do |article| %>
									<% if article.title == "quest1 zip pistol recoil succeed" %> 
										<p>
											<%= article.text %>
										</p>
									<% end %>
								<% end %>
								<br>
								<%= "You have failed!" %>
								<br><br>
								<%= button_to 'restart', pathfinder_q1_index_path %>
							<% else %>
								<%= "Despite emptying his clip, not a single bullet was able to destroy the support cable." %>
								<br><br>
								<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame killing him instantly." %>
								<br><br>
								<%= "You have failed!" %>
								<br>
								<%= button_to 'restart', pathfinder_q1_index_path %>
							<% end %>
						<% else %>
							<% @articles.each do |article| %>
								<% if article.title == "quest1 zip pistol succeed" %> 
									<p>
										<%= article.text %>
									</p>
								<% end %>
							<% end %>
							<br>
							
							<% segment_sub_1a = 1 %>
							
						<% end %>	
					<% else %>
						<%= "Despite emptying his clip, not a single bullet was able to destroy the support cable." %>
						<br><br>
						<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame killing him instantly." %>
						<br><br>
						<%= "You have failed!" %>
						<br>
						<%= button_to 'restart', pathfinder_q1_index_path, :method => :get %>
					<% end %>
				
				</h2>
			</center>
		</body>
		
	<% elsif @user_input_sub1 == "1a2" %>
		<body onload="ScrollDown()">
			<center>
				<h2>
					<% if $axe_hit.between?(1,75)%>
						
						<% if $axe_recoil.between?(1,85)%>
					
							<% @articles.each do |article| %>
								<% if article.title == "quest1 axe hit succeed" %> 
									<p>
										<%= article.text %>
									</p>
								<% end %>
							<% end %>
							<br>
							<% segment_sub_1a = 1 %>
						<% else %>
						
							<% @articles.each do |article| %>
								<% if article.title == "quest1 axe recoil succeed" %> 
									<p>
										<%= article.text %>
									</p>
								<% end %>
							<% end %>
							<br>
							<%= "You have failed!" %>
							<br>
							<%= button_to 'restart', pathfinder_q1_index_path, :method => :get %>
							
						<% end %>
					
					<% else%>
					
						<%= "Despite throwing each axe, not a single one was able to destroy the support cable." %>
						<br><br>
						<%= "Failing to drop the chandelier, Klarkel slams into the metallic frame killing him instantly." %>
						<br><br>
						<%= "You have failed!" %>
						<br>
						<%= button_to 'restart', pathfinder_q1_index_path, :method => :get %>
					
					<% end %>
				</h2>
			</center>
		</body>
	<% end %>
</div>
	
<% if segment_sub_1a == 1 %>
	<center>
		<h2>
			<% @articles.each do |article| %>
				<% if article.title == "quest1 section 1 sub1a pt.1" %> 
					<p>
						<%= article.text %>
					</p>
				<% end %>
			<% end %>
			<br>
			<% @articles.each do |article| %>
				<% if article.title == "quest1 section 1 sub1a pt.2" %> 
					<p>
						<%= article.text %>
					</p>
				<% end %>
			<% end %>
			<br>
			<% @articles.each do |article| %>
				<% if article.title == "quest1 section 1 sub1a pt.3" %> 
					<p>
						<%= article.text %>
					</p>
				<% end %>
			<% end %>
			<br>
			<% @articles.each do |article| %>
				<% if article.title == "quest1 section 1 sub1a pt.4" %> 
					<p>
						<%= article.text %>
					</p>
				<% end %>
			<% end %>
			<br>
			<% if not ( @url.include?('1b1') or @url.include?('1b2')) %>
				<%= "Which table do you choose?" %>
				<br><br>
				<%= "1. The Slayers" %>
				<br><br>
				<%= "2. The Warriors" %>
				<br><br>
				<%= form_for("pathfinder/a/q1/#{@user_input}/q1s1/#{@user_input_sub1}/q1s1a", method: :post) do %>
					<%= label_tag(:section_sub1a_input, "Please choose a path:") %>
					<%= text_field_tag :section_sub1a_input, @response_sub1a, maxlength:1 %>
					<%= submit_tag("Submit", 'data-disable-with' => "Please wait.." ) %>
				<% end %>
			<% end %>
		</h2>
	</center>
<% end %>

<% if not @url.include?('q1s1b') %>
	<br><br>
	<%= render 'homepage/banner' %>
<% end %>